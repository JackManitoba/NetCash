@model NetCashWebSite.Models.User

@section article {

    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true, "Login failed. Check your login details.");

            <h2>Login</h2>
            <div class="form-group">
                @Html.LabelFor(u => u.Email, new { @class = "control-label" })
                @Html.TextBoxFor(u => u.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(u => u.Email)
            </div>
            <div class="form-group">
                @Html.LabelFor(u => u.Password, new { @class = "control-label" })
                @Html.PasswordFor(u => u.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(u => u.Password)
            </div>

            <input id="btnLogin" class="btn btn-primary" type="submit" value="Log In" />
       }
    }



