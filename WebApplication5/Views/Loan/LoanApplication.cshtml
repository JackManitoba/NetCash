@model NetCash.Models.Loan

@{
    ViewBag.Title = "Loan";
    Layout = "/Views/Shared/_Layout.cshtml";
}

@section article {

    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true, "Application failed. Check your loan application details");

        <div>
            <fieldset>
                <legend>Loan Application</legend>

                <div>
                    @Html.LabelFor(l => l.LoanChoice)
                </div>
                <div>
                    @Html.DropDownListFor(l => l.LoanChoice, new SelectList(Model.LoanTypeOptions,
                               "LoanTypeID", "Value",
                               Model.LoanTypeOptions.First().LoanTypeID))
                </div>
                <div>
                    @Html.LabelFor(c => c.AmountRequired)
                </div>
                <div>
                    @Html.TextBoxFor(c => c.AmountRequired)
                    @Html.ValidationMessageFor(c => c.AmountRequired)
                </div>
                <div>
                    @Html.LabelFor(c => c.PeriodOfRepayment)
                </div>
                <div>
                    @Html.TextBoxFor(c => c.PeriodOfRepayment)
                    @Html.ValidationMessageFor(c => c.PeriodOfRepayment)
                </div>
                <input type="submit" value="Confirm" />              
                </fieldset>
            </div>
    }
    }




