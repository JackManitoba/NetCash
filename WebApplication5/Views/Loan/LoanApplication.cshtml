@model NetCash.Models.Loan

@{
    ViewBag.Title = "Loan";
    Layout = "/Views/Shared/_Layout.cshtml";
}

@section article {

    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true, "Application failed. Check your loan application details");


                <div class="form-group">
                    @Html.LabelFor(l => l.LoanChoice, new { @class = "control-label" })
                    @Html.DropDownListFor(l => l.LoanChoice, new SelectList(Model.LoanTypeOptions,
                               "LoanTypeID", "Value",
                               Model.LoanTypeOptions.First().LoanTypeID), new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(c => c.AmountRequired, new { @class = "control-label" })
                    @Html.TextBoxFor(c => c.AmountRequired, new { @class = "form-control" })
                    @Html.ValidationMessageFor(c => c.AmountRequired)
                </div>
                <div class="form-group">
                    @Html.LabelFor(c => c.PeriodOfRepayment, new { @class = "control-label" })
                    @Html.TextBoxFor(c => c.PeriodOfRepayment, new { @class = "form-control" })
                    @Html.ValidationMessageFor(c => c.PeriodOfRepayment)
                </div>
                <input class="btn btn-primary" type="submit" value="Confirm" />              
    }
    }




